<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mis_auh_partner_form_view" model="ir.ui.view">
            <field name="name">mis.auh.partner.form</field>
            <field name="model">res.partner</field>
             <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="after">
                    <div class="oe_title">
                        <label for="partner_code" name="model_code_label" string="Code" class="oe_edit_only"/>
                        <h3>
                            <field name="partner_code" string="Code" placeholder="e.g. XXXXXXX"/>

                        </h3>
                    </div>
                 </xpath>

            </field>
        </record>
    </data>
</odoo>
