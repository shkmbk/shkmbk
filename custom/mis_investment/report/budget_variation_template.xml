                                    <td>
                                        <span t-esc="line['particulars']"/>
                                        <t t-set="rowno" t-value="rowno+1"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{0:,.0f}'.format(line['budget'])"/>
                                    </td>
                                    <td class="text-right">
