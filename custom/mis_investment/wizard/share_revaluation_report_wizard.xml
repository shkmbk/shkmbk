<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mis_revaluation_report_view" model="ir.ui.view">
            <field name="name">Share Revaluation Report</field>
            <field name="model">mis.auh.revaluation.wizard</field>
            <field name="arch" type="xml">
                 <form name="Report Options">
                     <group>
                         <group>
                             <field name="date_from" required="1"/>
                         </group>
                         <group>
                             <field name="date_to"/>
                         </group>

                     </group>
                     <footer>
                        <button name="button_export_pdf" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>

                 </form>
            </field>
        </record>

        <record id="action_revaluation_report_menu" model="ir.actions.act_window">
            <field name="name">Share Revaluation Report</field>
            <field name="res_model">mis.auh.revaluation.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_share_revaluation_report"
                  name="Share Revaluation Report"
                  sequence="8"
                  action="action_revaluation_report_menu"
                  parent="mis_investment.mis_inv_report_menu"/>
    </data>
</odoo>